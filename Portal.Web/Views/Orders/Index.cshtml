@using Portal.Web.ViewModels
@model IEnumerable<OrdersView>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12 ">
        <div class="element-box element-wrapper">
            <h5 class="element-header">
                LATEST ORDERS
                <button class="mr-2 mb-2 btn btn-primary float-right" type="button"> View Orders</button>
            </h5>
            <div class="element-box-tp">
                <div class="table-responsive">
                    <table class="table table-padded">
                        <thead>
                            <tr>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Customer
                                </th>
                                <th>
                                    Item Purchased
                                </th>
                                <th class="text-center">
                                    Amount
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="smaller lighter">@item.Date</span>
                                    </td>
                                    <td>
                                        <div>
                                            <span>@item.Customer</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            @item.Product
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span>&#8358;@item.Amount</span>
                                    </td>
                                    <td>
                                        @item.Category
                                    </td>
                                    <td class="nowrap">
                                        <span class="status-pill smaller green"></span><span>Completed</span>
                                    </td>
                                    <td class="row-actions">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-primary  dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                <span class="caret">Action</span>
                                                <span class="sr-only"></span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    <a asp-controller="Settings" asp-action="Index">Edit</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Settings" asp-action="Index">Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="controls-below-table">
                        <div class="table-records-info">
                            Showing records 1 - 5
                        </div>
                        <div class="table-records-pages">
                            <ul>
                                <li>
                                    <a href="#">Previous</a>
                                </li>
                                <li>
                                    <a class="current" href="#">1</a>
                                </li>
                                <li>
                                    <a href="#">2</a>
                                </li>
                                <li>
                                    <a href="#">3</a>
                                </li>
                                <li>
                                    <a href="#">4</a>
                                </li>
                                <li>
                                    <a href="#">Next</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>