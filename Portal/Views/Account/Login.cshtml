@using Portal.ViewModel;
@model LoginViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="all-wrapper login-with-image">
    <div class="auth-box-w">
        <div class="logo-w">
            <img alt="" src="~/custom-admin/img/arm-logo.png">
        </div>
        <hr>
        <form asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <label for="">Username</label>
                <input name="Username" asp-for="Username" type="text" class="form-control" placeholder="Enter your username">
                <div class="pre-icon os-icon os-icon-user-male-circle"></div>
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input name="Password" asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                <div class="pre-icon os-icon os-icon-fingerprint"></div>
            </div>
            <div class="form-group buttons-w text-center">
                <button class="btn btn-primary btn-block">Login</button>
            </div>
            <div class=" text-center">
                <span> <a href="forgot-password.html" class=" text-center b-t m-t">Forgot Password</a></span>
            </div>
        </form>
    </div>
</div>