@using Portal.Areas.Admin.ViewModels
@model DashBoardView;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="content-i">
    <div class="content-box">

        <!---- Dashboard Overview --->
        <div class="row">
            <div class=" col-md-12 ">
                <div class=" ">
                    <div class="element-box">
                        <div class="m-b">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5>
                                        Overview
                                    </h5>
                                </div>
                                <div class="col-md-6">
                                    <form asp-action="Index" method="get" class="form-inline float-right">
                                        <select name="SearchString" class="form-control form-control-sm rounded bright">
                                            <option selected="selected" value="This Month">
                                                This Month
                                            </option>
                                            <option value="Last Month">
                                                Last Month
                                            </option>
                                            <option value="This Year">
                                                This year
                                            </option>
                                            <option value="All Time">
                                                All Time
                                            </option>
                                        </select>
                                        <input type="submit" value="Search" class="btn btn-sm btn-primary" /> |
                                        <a asp-action="Index">Back to Full List</a>
                                    </form>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 col-lg-3 col-12 b-r b-b no-br">
                                    <a class="el-tablo centered padded-v-big highlight smaller" href="Sales.html">
                                        <img class="dash-icon-img" alt="" src="img/sales-icon.svg">
                                        <div class="label">
                                            Sales
                                        </div>
                                        <div class="value font-one-four">
                                            &#8358;@Model.Sales
                                        </div>
                                    </a>
                                </div>
                                <div class="col-sm-6 col-lg-3 col-12 b-b b-r no-br">
                                    <a class="el-tablo centered padded-v-big highlight smaller" href="Orders.html">
                                        <img class="dash-icon-img" alt="" src="img/orders-icon.svg">
                                        <div class="label">
                                            Orders
                                        </div>
                                        <div class="value font-one-four">
                                            @Model.Orders
                                        </div>
                                    </a>
                                </div>
                                <div class="col-sm-6 col-lg-3 col-12 b-r b-b no-br">
                                    <a class="el-tablo centered padded-v-big highlight smaller" href="Customers.html">
                                        <img class="dash-icon-img" alt="" src="img/customers-icon.svg">
                                        <div class="label">
                                            Customers
                                        </div>
                                        <div class="value font-one-four">
                                            @Model.Customers
                                        </div>
                                    </a>
                                </div>
                                <div class="col-sm-6 col-lg-3 col-12 b-b no-br">
                                    <a class="el-tablo centered padded-v-big highlight smaller" href="Expressions of Interest.html">
                                        <img class="dash-icon-img" alt="" src="img/eoi-icon.svg">
                                        <div class="label">
                                            Expressions of Interest
                                        </div>
                                        <div class="value font-one-four">
                                            @Model.ExpressionOfINterest
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!---- Latest Orders --->
        <div class="row">
            <div class="col-md-12 ">
                <div class="element-box element-wrapper">
                    <h5 class="element-header">
                        LATEST ORDERS
                        <button class="mr-2 mb-2 btn btn-primary float-right" type="button"> View Orders</button>
                    </h5>
                    <div class="element-box-tp">
                        <div class="table-responsive">
                            <table class="table table-padded">
                                <thead>
                                    <tr>
                                        <th>
                                            Date
                                        </th>

                                        <th>
                                            Customer
                                        </th>
                                        <th>
                                            Item Purchased
                                        </th>
                                        <th>
                                            Product Type
                                        </th>
                                        <th class="text-center">
                                            Amount
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>
                                                <span class="smaller lighter">@item.AddToCartDateInHuman</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <span>
                                                        @item.Customer
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    @item.ProductName
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    @item.ProductType
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span>&#8358;@item.Amount</span>
                                            </td>
                                            <td>
                                                @item.ProductCateogry
                                            </td>
                                            <td class="nowrap">
                                                <span class="status-pill smaller green"></span><span>@item.TransactionStatus</span>
                                            </td>
                                            <td class="row-actions">
                                                <a href="#" title="View"><i class="os-icon os-icon-eye"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!---- Report Summary --->

        <div class="row">
            <!---- Analytics Summary --->
            <div class="col-md-6 ">
                <div class="element-box element-wrapper element-card-bg">
                    <h5 class="element-header">
                        ANALYTICS
                    </h5>
                </div>
            </div>
            <!---- BI Tools Summary --->
            <div class="col-md-6 ">
                <div class="element-box element-wrapper element-card-bg">
                    <h5 class="element-header">
                        BI TOOLS
                    </h5>
                </div>
            </div>
        </div>
    </div>
</div>