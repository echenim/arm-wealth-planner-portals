@using Portal.Business.Utilities
@model PaginatedList<Transactional>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12 ">
        <div class="element-box element-wrapper">
            <h5 class="element-header">
                SALES
            </h5>
            <div class="element-box-tp">
                <form asp-action="Index" method="get">
                    <div class="form-actions no-color">
                        <p>
                            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                            <input type="submit" value="Search" class="btn btn-default" /> |
                            <a asp-action="Index">Back to Full List</a>
                        </p>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-striped b-b">
                        <thead>
                            <tr>
                                <th>
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    CartID
                                </th>

                                <th>
                                    Customer
                                </th>
                                <th>
                                    Item Purchased
                                </th>
                                <th class="text-center">
                                    Amount
                                </th>
                                <th>
                                    Category
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td class="nowrap">
                                        @if (item.OrderAndPurchaseStatus.Equals("Succeed"))
                                        {
                                            <span class="status-pill smaller green"></span><span>@item.OrderAndPurchaseStatus</span>
                                        }
                                        @if (item.OrderAndPurchaseStatus.Equals("Failed"))
                                        {
                                            <input type="checkbox" id="myCheck" onclick="myFunction(this)" value='+@item.Id+'>@item.Id
                                            <span class="status-pill smaller red"></span><span>@item.OrderAndPurchaseStatus</span>
                                        }
                                        @if (item.OrderAndPurchaseStatus.Equals("Incart"))
                                        {
                                            <span class="status-pill smaller yellow"></span><span>@item.OrderAndPurchaseStatus</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="smaller lighter">
                                            @string.Format("{0}", item.OrderDate, "MMMM dd, yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        <div>
                                            @item.TransactionNo
                                        </div>
                                    </td>

                                    <td>
                                        <a asp-controller="Customers" asp-action="Detail" asp-route-id="@item.ItemOwner">@item.ItemOwner</a>
                                    </td>
                                    <td>
                                        <div>
                                            @item.Product.Name
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span>&#8358;@item.Amount</span>
                                    </td>
                                    <td>
                                        @item.Product.ProductCategory.Name
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="controls-below-table">
                    <div class="table-records-info">
                        Showing records @Model.PageIndex - @Model.TotalPages
                    </div>
                    <div class="table-records-pages">
                        @{
                            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                        }

                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-page="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-lg btn-primary @prevDisabled">
                            Previous
                        </a>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-page="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-lg btn-primary @nextDisabled">
                            Next
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>