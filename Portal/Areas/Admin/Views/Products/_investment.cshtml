@model Portal.Areas.Admin.ViewModels.ProductInvestmentInformationView

@{
    ViewData["Title"] = "_add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<!---- Dashboard Overview --->
<div class="row">
    <div class=" col-md-12 ">
        <div class=" ">
            <div class="">

                <div class="element-box">
                    <div class="m-b">
                        <form asp-controller="Products" asp-action="AddInvestmentInfo" method="post">
                            @Html.AntiForgeryToken()
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="element-box">

                                        <h5 class="form-header">
                                            Add New Product
                                        </h5>
                                        <input name="ProductId" asp-for="ProductId" class="form-control" readonly="readonly" type="hidden">

                                        <div class="form-group">
                                            <label for=""> Product Name</label>
                                            <input name="ProductName" asp-for="ProductName" class="form-control" readonly="readonly" type="text">
                                        </div>

                                        <div class="form-group">
                                            <label for=""> Select Investment Info</label>
                                            <select name="Sections" asp-for="Sections" class="form-control">
                                                <option value="">--select-- </option>
                                                <option value="Minimum Investment">Minimum Investment</option>
                                                <option value="Risk Level">Risk Level</option>
                                                <option value="What the Fund invests in">What the Fund invests in</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label> Title</label>
                                            <input name="Abs" asp-for="Abs" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label> YieldOrAmount</label>
                                            <input name="RangOrCost" asp-for="RangOrCost" class="form-control" />
                                        </div>

                                        <div class="form-group">
                                            <button class="btn btn-primary" type="submit">Add More</button>
                                            @Html.Raw("     ") <a asp-action="Index">Finished</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}